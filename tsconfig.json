{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ]
}